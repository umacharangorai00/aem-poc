<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Specifications"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-author_editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <specifications
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Specifications"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                fieldLabel="Book Details">
                                <items jcr:primaryType="nt:unstructured">
                                    <specificationdetails
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Specifications Details"
                                        fieldLabel="Specifications Details"
                                        required="{Boolean}false">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            emptyText="Books Details"
                                            name="./specificationDetails">
                                            <items jcr:primaryType="nt:unstructured">
                                                <heading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Heading"
                                                    fieldLabel="Heading"
                                                    name="./heading"/>
                                                <subheading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Sub Heading"
                                                    fieldLabel="Sub Heading"
                                                    name="./subHeading"/>
                                                <attributes
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    fieldDescription="Attributes"
                                                    fieldLabel="Attributes"
                                                    required="{Boolean}false">
                                                    <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                                        emptyText="Book Editions"
                                                        name="./attributes">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <attributename
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                emptyText="Attribute Name"
                                                                fieldLabel="Attribute Name"
                                                                name="./attributeName"/>
                                                            <attributevalue
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldDescription="Attribute Value"
                                                                fieldLabel="Attribute Value"
                                                                name="./attributeValue"/>
                                                        </items>
                                                    </field>
                                                </attributes>
                                            </items>
                                        </field>
                                    </specificationdetails>
                                </items>
                            </well>
                        </items>
                    </specifications>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
